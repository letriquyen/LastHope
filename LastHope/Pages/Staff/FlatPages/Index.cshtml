@page
@model LastHope.Pages.Staff.FlatPages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutStaff";
}
<style>
    .group-btn {
        display: flex;
        gap: 10px;
    }

</style>
<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Flat[0].Building)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flat[0].RoomNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flat[0].FlatType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flat[0].Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flat[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flat[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Flat) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Building.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FlatType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="flex-container group-btn">

    <form method="post">
        <input type="hidden" asp-for="CurrentPage" />
        <input type="hidden" asp-for="TotalPage" />

        <input name="Page" value="@Model.CurrentPage" type="hidden" />
        <div class="group-btn">
            @if (Model.CurrentPage > 1)
            {
                <button type="submit" class="btn btn-primary" value="Previous" asp-page-handler="Previous">Previous</button>
            }
            @Model.CurrentPage
            @if (Model.TotalPage > Model.CurrentPage)
            {
                <button type="submit" class="btn btn-primary" value="Next" asp-page-handler="Next">Next</button>
            }
        </div>
        
        
    </form>

</div>