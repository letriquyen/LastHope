@page
@model LastHope.Pages.Staff.BuildingPages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutStaff";
}

<h1>Buildings</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Building[0].Capacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Building) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
